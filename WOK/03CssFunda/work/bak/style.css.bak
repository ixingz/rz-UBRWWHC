/* id selector */
#author {
  font-style: italic;
  font-size: 18px;
}

#copyright {
  font-size: 16px;
}

/* class selector */
.related-author {
  font-size: 18px;
  font-weight: bold;
}

/* Changing the unordered list styles */
/* ul {
