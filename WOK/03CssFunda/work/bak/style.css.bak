a {
  color: #1098ad;
}
a:link {
  color: #1098ad;
  text-decoration: none;
}
a:visited {
  color: #1098ad;
}
a:hover {
  color: rgb(0, 21, 255);
  font-weight: bold;
  text-decoration: underline wavy rgb(0, 21, 255);
}
a:active {
  background-color: rgb(3, 239, 66);
  font-style: italic;
}
