/* body element parent element of all properites */
body {
  color: #444;
  font-family: sans-serif;
  border-top: 20px solid #1098ad;
  position: relative;
}

h1 {
  font-size: 36px;
  text-transform: uppercase;
  font-style: italic;
  color: #1098ad;
}

h2 {
  font-size: 40px;
}

h3 {
  font-size: 30px;
}

h1,
h2,
h3 {
  color: #1098ad;
}

h4 {
  font-size: 24px;
  text-transform: uppercase;
  text-align: center;
}

/* Pragraph Styles */
p {
  font-size: 22px;
  line-height: 1.5;
}

/* Styling the lists */
li {
  font-size: 20px;
}

/* Descendent Selector */
/* footer p {
