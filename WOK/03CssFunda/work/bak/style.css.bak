/* Automated finding 1st enty of li */
li:first-child {
  font-weight: bold;
}
li:last-child {
  font-style: italic;
}
li:nth-child(odd) {
  color: rgb(245, 0, 204);
}

li:nth-child(even) {
  color: rgb(38, 34, 255);
}
